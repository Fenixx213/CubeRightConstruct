<Window x:Class="CubeRightConstruct.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cube Construction Viewer" Height="600" Width="916">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 3D Viewport for Cube Construction -->
        <Viewport3D x:Name="viewport" Grid.Column="0" Margin="10">
            <Viewport3D.Camera>
                <PerspectiveCamera x:Name="camera" Position="5,5,5" LookDirection="-5,-5,-5" UpDirection="0,1,0" FieldOfView="60"/>
            </Viewport3D.Camera>
            <ModelVisual3D>
                <ModelVisual3D.Content>
                    <Model3DGroup x:Name="cubeGroup">
                        <AmbientLight Color="White"/>
                        <DirectionalLight Color="White" Direction="-1,-1,-1"/>
                    </Model3DGroup>
                </ModelVisual3D.Content>
            </ModelVisual3D>
        </Viewport3D>

        <!-- Right Panel for Controls and Drawing -->
        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Choose the correct 2D view:" Margin="5"/>
            <Canvas x:Name="drawingCanvas" Width="226" Height="239" Background="White" Margin="5"/>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Button x:Name="clearButton" Content="Рестарт" Click="ClearGrid_Click" Margin="5"/>

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>